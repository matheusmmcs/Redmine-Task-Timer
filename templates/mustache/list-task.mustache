<h1>
	Redmine Time Tracker 
	<a class="bt bt-config pull-right time-tracker-popup-config"><span class="glyphicon glyphicon-cog"></span></a>
</h1>
<ul id="task-list" class="list">
	<hr/>
	{{#tasks}}	
	<li data-id="{{taskNumber}}" data-src="{{taskUrl}}">
		<a class="time-tracker-icon-lock" href="#">
			{{#alwaysVisible}}
				<i data-locked="true" class="glyphicon glyphicon-lock"></i>
			{{/alwaysVisible}}
			{{^alwaysVisible}}
				<i data-locked="false" class="glyphicon glyphicon-unchecked"></i>
			{{/alwaysVisible}}
		</a>
		<a data-id="{{taskNumber}}" class="time-tracker-list-name" href="#" title="Details: {{taskName}}">{{taskNumber}}{{#hasName}}: {{taskNameMin}}{{/hasName}}</a>
		
		<a title="Finish Task" data-id="{{taskNumber}}" data-started="true" class="bt bt-gray color-blue pull-right time-tracker-popup-finish"><span class="glyphicon glyphicon-ok"></span></a>
		{{#started}}
			<a title="Pause Task" data-id="{{taskNumber}}" data-started="true" class="bt bt-stop pull-right time-tracker-popup-start-stop"><span class="glyphicon glyphicon-pause"></span></a>
		{{/started}}
		{{^started}}
			<a title="Init Task" data-id="{{taskNumber}}" data-started="false" class="bt bt-green pull-right time-tracker-popup-start-stop"><span class="glyphicon glyphicon-play"></span></a>
		{{/started}}
		<span class="color-white opacity-50 pull-right time-tracker-list-time"><i class="time-tracker-icon-time glyphicon glyphicon-time"></i><b class="task-time">{{timeFormatted}}</b></span>
	</li>
	{{/tasks}}
</ul>